---
import { FaSquareXTwitter } from 'react-icons/fa6';
import { FaLinkedin } from 'react-icons/fa';
import { FaGithubSquare } from 'react-icons/fa';
---

<div class='wrapper'>
	<!-- Hero Header -->
	<div class='hero__header'>
		<div class='avatar'>
			<img
				src='/images/profile.webp'
				alt='maaz'
			/>
		</div>
		<div class='hero__title'>
			<h1>Mohammed Ali Maaz</h1>
			<p>Full Stack developer</p>
		</div>
	</div>

	<!-- Description -->
	<div class='hero__desc'>
		<p>
			Welcome to my digital garden where I share what I'm learning about
			shipping great products, becoming a better developer and growing a career
			in tech.
		</p>
	</div>
	<!-- Socials -->
	<div class='links'>
		<a href=''>
			<div class='icons'>
				<FaSquareXTwitter className='icon' />Twitter
			</div>
		</a>
		<a href=''>
			<div class='icons'>
				<FaLinkedin className='icon' />LinkedIn
			</div>
		</a>
		<a href=''>
			<div class='icons'>
				<FaGithubSquare className='icon' />Github
			</div>
		</a>
	</div>
</div>

<style>
	.wrapper {
		padding: 12rem 0.5rem;
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}
	.hero__header {
		display: flex;
		align-items: center;
		gap: 2.25rem;
	}
	.hero__title h1 {
		font-size: 2.25rem;
		font-weight: normal;
		font-family: var(--font2);
	}
	.hero__title p {
		color: var(--text-secondary);
	}
	.avatar {
		width: 5rem;
		aspect-ratio: 1/1;
		border-radius: 50%;
		padding: 10px;
		border: 2px solid var(--border-grd2);
		display: grid;
		place-items: center;
	}
	.avatar img {
		width: 100%;
	}

	.hero__desc {
		font-size: 1.25rem;
	}

	.links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.icons {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		justify-content: center;
	}
	.icon {
		font-size: 1.5rem;
	}
</style>
