---
import Logo from './Logo.astro';
import Link from './Link.astro';
---

<header id='navbar'>
	<nav class='navbar'>
		<div>
			<Logo />
		</div>
		<div>
			<div class='links'>
				<Link
					title='Posts'
					url='/posts'
				/>
				<Link
					title='Twitter'
					url='https://twitter.com/MdMaaz2907'
				/>
				<Link
					title='LinkedIn'
					url='https://www.linkedin.com/in/mohammed-ali-maaz-26962828b/'
				/>
				<Link
					title='Github'
					url='https://github.com/mdAliMaaz'
				/>
			</div>
		</div>
	</nav>
</header>

<style>
	.show {
		display: block;
	}
	header {
		display: none;
		max-width: 40rem;
		position: fixed;
		width: 100%;
		left: 50%;
		top: 8%;
		transform: translate(-50%, -50%);
		background: rgb(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border-radius: 1rem;
		padding: 10px;
		z-index: 10;
		animation: navbarAnimation 0.4s ease-in;
	}
	.navbar {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.links {
		flex: 1;
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	@keyframes navbarAnimation {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
</style>

<script>
	window.addEventListener('scroll', (e) => {
		const navbar = document.getElementById('navbar');

		const scrollValue = Math.round(window.scrollY);

		if (scrollValue > 250) {
			navbar?.classList.add('show');
		} else {
			navbar?.classList.remove('show');
		}
	});
</script>
